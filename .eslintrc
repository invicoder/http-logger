extends: "airbnb/base"
rules:
  indent: [0, 4, { "SwitchCase": 2, "VariableDeclarator": 2 }]
  semi: [2, "always"]
  one-var: [0, "never"]
  no-unused-vars: [0, "never"]
  no-underscore-dangle: [0, "never"]
  comma-dangle: [2, "only-multiline"]
  max-len: ["error", 180, { "ignoreComments": true }]
  camelcase: [0, {properties: "never"}]
  arrow-body-style: [0, "never"]
  no-param-reassign: [0, "never"]
  arrow-parens: [0, "never"]
  newline-per-chained-call: [0, "never"]
  object-curly-newline: [0, "never"]
  no-await-in-loop: [0, "never"]
  no-useless-escape: [0, "never"]